body {
  margin: 0;
  background-color: #f0f0f0;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}
canvas {
  border: 2px solid #333;
  background-color: #a3d977;
}
const canvas = document.getElementById('gameCanvas');
const ctx = canvas.getContext('2d');

// İnek sprite'ını yükle
const cowSprite = new Image();
cowSprite.src = 'images/cow.png';

// İnek konumu
let cow = { x: 100, y: 100 };

// Görsel yüklendikten sonra çiz
cowSprite.onload = () => {
  draw();
};

function draw() {
  ctx.clearRect(0, 0, canvas.width, canvas.height);
  ctx.drawImage(cowSprite, cow.x, cow.y, 64, 64); // 64x64 boyut
}
